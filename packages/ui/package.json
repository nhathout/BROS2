{
  "name": "@bros/ui",
  "version": "0.1.0",
  "description": "UI-neutral block to IR converters for BROS",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types/blocks": {
      "types": "./dist/types/blocks.d.ts",
      "import": "./dist/types/blocks.js",
      "default": "./dist/types/blocks.js"
    },
    "./generators": {
      "types": "./dist/generators/index.d.ts",
      "import": "./dist/generators/index.js",
      "default": "./dist/generators/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf dist tsconfig.tsbuildinfo",
    "test": "vitest run --config vitest.config.ts"
  },
  "dependencies": {
    "@bros/shared": "workspace:^",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "@types/node": "^24.5.2",
    "vitest": "^2.1.4",
    "rimraf": "^6.0.1"
  }
}
