        ('share/' + package_name + '/launch', []),
    ],
    install_requires=['setuptools'],
    zip_safe=True,
    maintainer='BROS2',
    maintainer_email='nhathout11@gmail.com',
    description='Generated ROS2 Python package',
    license='Apache-2.0',
    tests_require=['pytest'],
    entry_points={
