#!/usr/bin/env python3
import rclpy
from rclpy.node import Node

from std_msgs.msg import String

class GenSubNode(Node):
    def __init__(self):
        super().__init__("{{ node_name }}")
{% for s in subs %}
        self.create_subscription(String, "{{ s.topic }}", self.cb_{{ loop.index0 }}, 10)
{% endfor %}

{% for s in subs %}
    def cb_{{ loop.index0 }}(self, msg):
        self.get_logger().info(f"{{ s.topic }} -> {msg.data}")
{% endfor %}

def main():
    rclpy.init()
    node = GenSubNode()
    rclpy.spin(node)
    node.destroy_node()
    rclpy.shutdown()

if __name__ == "__main__":
    main()