#!/usr/bin/env python3
import rclpy
from rclpy.node import Node

from std_msgs.msg import String

class GenPubNode(Node):
    def __init__(self):
        super().__init__("{{ node_name }}")
        self.publishers = []
{% for p in pubs %}
        pub = self.create_publisher(String, "{{ p.topic }}", 10)
        self.publishers.append(pub)
{% endfor %}
        self.timer = self.create_timer(0.5, self.tick)
        self.counter = 0

    def tick(self):
        self.counter += 1
        msg = String()
        msg.data = f"Hello from {{ node_name }} #{self.counter}"
{% for p in pubs %}
        self.publishers[{{ loop.index0 }}].publish(msg)
{% endfor %}
        self.get_logger().info(msg.data)

def main():
    rclpy.init()
    node = GenPubNode()
    rclpy.spin(node)
    node.destroy_node()
    rclpy.shutdown()

if __name__ == "__main__":
    main()